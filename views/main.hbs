<!DOCTYPE html>
<html>
<head>
    <style>
        /* This helps the ng-show/ng-hide animations start at the right place. */
        /* Since Angular has this but needs to load, this gives us the class early. */
        .ng-hide {
            display: none!important;
        }
    </style>
    <title data-ng-bind="title">Craftia</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no" />

    <script>
        // Must be first. IE10 mobile viewport fix
        if ("-ms-user-select" in document.documentElement.style && navigator.userAgent.match(/IEMobile\/10\.0/)) {
            var msViewportStyle = document.createElement("style");
            var mq = "@-ms-viewport{width:auto!important}";
            msViewportStyle.appendChild(document.createTextNode(mq));
            document.getElementsByTagName("head")[0].appendChild(msViewportStyle);
        }
    </script>

    <link href="css/ie10mobile.css" rel="stylesheet" />
    <link href="css/bootstrap.css" rel="stylesheet" />

    <link href="css/font-awesome.min.css" rel="stylesheet" />
    <link href="css/toastr.css" rel="stylesheet" />
    <link href="css/customtheme.css" rel="stylesheet">
    <link href="css/rateit.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet" />
    <link href="css/craftia-theme.css" rel="stylesheet" />
    <link href="css/lightbox.css" rel="stylesheet" />
    <link href="css/animate.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="vendor/jquery-ui/themes/smoothness/jquery-ui.css"/>
    <link href="css/craftia-topmenu.css" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Droid+Serif:400,700,700italic,400italic' rel='stylesheet' type='text/css'/>
    <link href='http://fonts.googleapis.com/css?family=Arimo:400,700,700italic,400italic' rel='stylesheet' type='text/css'/>
    
    <!-- Angular carousel -->
    <link href="vendor/angular-carousel/dist/angular-carousel.css" rel="stylesheet" />
    <link href="css/craftia-topmenu.css" rel="stylesheet" />
    
    <!-- -->
    <link href="css/off-canvas.css" rel="stylesheet"/>
</head>
<body>
    <div ui-view=""></div>
    <script type="text/javascript" src="js/config.js">
    </script>
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>
    {{#if production}}
        <script type="text/javascript" src="vendor/requirejs/require.js" data-main="dist.js">
        </script>
    {{else}}
        <script type="text/javascript" src="vendor/requirejs/require.js" data-main="bootstrap.js">
        </script>
    {{/if}}
</body>
</html>